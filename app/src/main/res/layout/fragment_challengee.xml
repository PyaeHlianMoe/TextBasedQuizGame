<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="@color/black_overlay"
                android:textSize="15sp"
                tools:text="Who would you like to challenge?" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:padding="10dp"
                android:text="Challenge To : "
                android:textColor="@color/black_overlay"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edittext_receiver"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@drawable/edittext_background_greyborder"
                android:hint="Name"
                android:inputType="text"
                android:paddingLeft="20dp"
                android:textColor="@color/colorGrey"
                android:textSize="18sp" />


        </LinearLayout>

        <Button
            android:id="@+id/btn_Challengee"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/choice_a"
            android:text="Next"
            android:textColor="@color/colorWhite"
            android:textSize="30sp" />


    </LinearLayout>
</ScrollView>
