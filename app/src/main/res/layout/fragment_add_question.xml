<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/text_question_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Question"
            android:textColor="@color/black_overlay"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/btn_ToAddQuestion"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="SAVE"
            android:textColor="@color/colorPrimaryDark" />

    </RelativeLayout>
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFEFEF">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/edittext_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:hint="Please enter for Question."
                android:padding="20dp"
                android:textColor="@color/black_overlay"
                android:textSize="15sp" />

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/layout_ans_a"
                android:foreground="?attr/selectableItemBackground">

                <EditText
                    android:id="@+id/edittext_option1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/edittext_background"
                    android:gravity="center_vertical"
                    android:hint="Please enter for choice A."
                    android:paddingLeft="80dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10sp"
                    android:paddingBottom="10dp"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/bt_choice_a"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:text="A"
                    android:textSize="30sp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:background="@drawable/choice_a"/>

            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/layout_ans_b"
                android:foreground="?attr/selectableItemBackground">

                <EditText
                    android:id="@+id/edittext_option2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/edittext_background"
                    android:gravity="center_vertical"
                    android:hint="Please enter for choice B."
                    android:paddingLeft="80dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10sp"
                    android:paddingBottom="10dp"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/bt_choice_b"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:text="B"
                    android:textSize="30sp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:background="@drawable/choice_b"/>

            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/layout_ans_c"
                android:foreground="?attr/selectableItemBackground">

                <EditText
                    android:id="@+id/edittext_option3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/edittext_background"
                    android:gravity="center_vertical"
                    android:hint="Please enter for choice C."
                    android:paddingLeft="80dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10sp"
                    android:paddingBottom="10dp"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/bt_choice_c"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:text="C"
                    android:textSize="30sp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:background="@drawable/choice_c"/>

            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/layout_ans_d"
                android:foreground="?attr/selectableItemBackground">

                <EditText
                    android:id="@+id/edittext_option4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/edittext_background"
                    android:gravity="center_vertical"
                    android:hint="Please enter for choice D. "
                    android:paddingLeft="80dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10sp"
                    android:paddingBottom="10dp"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/bt_choice_d"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:text="D"
                    android:textSize="30sp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:background="@drawable/choice_d"/>

            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/layout_correct_answ"
                android:foreground="?attr/selectableItemBackground">

                <EditText
                    android:id="@+id/edittext_correctAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/edittext_background"
                    android:gravity="center_vertical"
                    android:hint="Please enter the correct answer here."
                    android:paddingLeft="80dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10sp"
                    android:paddingBottom="10dp"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/bt_correct_ans"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:text="Correct\nAnswer"
                    android:textSize="15sp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:background="@drawable/choice_a"/>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>


