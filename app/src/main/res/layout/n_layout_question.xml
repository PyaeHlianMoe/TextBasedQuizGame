<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:background="@android:color/white">

        <Button
            android:id="@+id/bt_back"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_keyboard_backspace_black_24dp"/>

        <TextView
            android:id="@+id/text_question_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question1"
            android:textColor="@color/black_overlay"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:textAlignment="center"/>

    </RelativeLayout>

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFEFEF">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_question"
                android:background="@drawable/edittext_background"
                tools:text="akfjdla kjafdldfladfjdaflkf jafdlf kkakfjd afdkl jafd \n
             al;dskjffdgjlk;asdf;lskajd fasd;klfj sa;dfj sdf \n
             asdl;kfjsd;fjas;dkfjas;dklfj;asdlkfj;asdkfjasdf;ksdjf ?"
                android:padding="20dp"
                android:textColor="@color/black_overlay"
                android:textSize="15sp"/>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/layout_ans_a"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/text_choice_a"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/edittext_background"
                    android:layout_marginLeft="30dp"
                    android:text="jkajdkfakfkdfkafjdkf aflkdakjdlf akfajkdjlfjd kjklaj lk kajfdkjladf"
                    android:paddingLeft="80dp"
                    android:paddingRight="10sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="15sp"
                    android:gravity="center_vertical"/>

                <Button
                    android:id="@+id/bt_choice_a"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:text="A"
                    android:textSize="30sp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:background="@drawable/choice_a"/>

            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/layout_ans_b"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/text_choice_b"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/edittext_background"
                    android:layout_marginLeft="30dp"
                    android:text="jkajdkfakfkdfkafjdkf aflkdakjdlf akfajkdjlfjd kjklaj lk kajfdkjladf"
                    android:paddingLeft="80dp"
                    android:paddingRight="10sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="15sp"
                    android:gravity="center_vertical"/>

                <Button
                    android:id="@+id/bt_choice_b"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:text="B"
                    android:textSize="30sp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:background="@drawable/choice_b"/>

            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/layout_ans_c"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/text_choice_c"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/edittext_background"
                    android:layout_marginLeft="30dp"
                    android:text="jkajdkfakfkdfkafjdkf aflkdakjdlf akfajkdjlfjd kjklaj lk kajfdkjladf"
                    android:paddingLeft="80dp"
                    android:paddingRight="10sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="15sp"
                    android:gravity="center_vertical"/>

                <Button
                    android:id="@+id/bt_choice_c"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:text="C"
                    android:textSize="30sp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:background="@drawable/choice_c"/>

            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/layout_ans_d"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/text_choice_d"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/edittext_background"
                    android:layout_marginLeft="30dp"
                    android:text="jkajdkfakfkdfkafjdkf aflkdakjdlf akfajkdjlfjd kjklaj lk kajfdkjladf"
                    android:paddingLeft="80dp"
                    android:paddingRight="10sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="15sp"
                    android:gravity="center_vertical" />

                <Button
                    android:id="@+id/bt_choice_d"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:text="D"
                    android:textSize="30sp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:background="@drawable/choice_d"/>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>


