<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/bt_menu"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_keyboard_backspace_black_24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Dashboard"
            android:padding="10dp"
            android:textColor="@color/black_overlay"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/bt_noti"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_notifications_black_24dp"/>


    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Do a quiz now!"
            android:padding="10dp"
            android:textColor="@color/black_overlay"
            android:textSize="15sp"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_create_challenges"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:text="Create \n Challenges"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/choice_c"
            android:layout_weight="1"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btn_view_challenges"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:text="View \n Challenges"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/choice_b"
            android:layout_weight="1"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btn_view_ranking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:text="View \n Ranking"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/choice_d"
            android:layout_weight="1"
            android:layout_margin="2dp"/>
    </LinearLayout>

        <TextView
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your total score is : "
            android:padding="5dp"
            android:textColor="@color/black_overlay"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_score"
            android:text="156/200"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:padding="30dp"
            android:textColor="#DC6464"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quiz history "
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:textColor="@color/black_overlay"
            android:textSize="15sp" />

        <include layout="@layout/quiz_history_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

        <include layout="@layout/quiz_history_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

        <include layout="@layout/quiz_history_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
</ScrollView>
